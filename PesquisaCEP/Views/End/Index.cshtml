@model List<End>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta name="charset" content="utf-8" />
    <title>Consultar e Cadastrar CEP</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="js/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
</head>
<body>
    <h3>Consultar e Cadastrar CEP </h3>

    <div class="container" style="margin-top: 50px">
        <form asp-action="PesquisarCep" asp-controller="End">
            <label for="txtCep">CEP</label>
            <input type="text" id="txtCep" name="txtCep" class="form-control col-4" placeholder="Digite o CEP" size="40" /><br />
            <input type="submit" value="Consultar e Cadastrar" class="btn-info" /><br /><br />

            <table class="table table-bordered">
                <tr>
                    <th>Cep</th>
                    <th>Logradouro</th>
                    <th>Complemento</th>
                    <th>Bairro</th>
                    <th>Localidade</th>
                    <th>UF</th>
                </tr>


                @foreach (End item in Model)
                {
                    <tr>
                        <td>@item.Cep</td>
                        <td>@item.Logradouro</td>
                        <td>@item.Complemento</td>
                        <td>@item.Bairro</td>
                        <td>@item.Localidade</td>
                        <td>@item.Uf</td>
                    </tr>
                }
            </table>
        </form>
    </div>
</body>
</html>